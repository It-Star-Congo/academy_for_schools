<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <title>Live – IT Star Academy</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://meet.jit.si/external_api.js"></script>
  <style>
    :root { --primary-color: <%= theme.primaryColor %>; --secondary-color: <%= theme.secondaryColor %>; --font-family: '<%= theme.fontFamily %>'; }
    body { margin:0; font-family: var(--font-family), system-ui, Roboto, sans-serif; background:#0b1020; color:#eef1ff; }
    header { display:flex; align-items:center; gap:10px; padding:12px 16px; border-bottom:1px solid #1b2342; background: linear-gradient(90deg, rgba(55,81,255,.12), rgba(35,43,77,.12)); }
    header img { height:26px; }
    header a { margin-left:auto; color:#cfd6ff; text-decoration:none; font-weight:600; }
    #wrap { height: calc(100vh - 56px); padding:12px; }
    #jitsi { width:100%; height:100%; border-radius:14px; overflow:hidden; border:1px solid #1b2342; background:#0b1020; position:relative; }
    .itsa-watermark { position:absolute; right:14px; bottom:12px; z-index: 10; display:flex; align-items:center; gap:8px; padding:6px 10px; border-radius:8px; background:rgba(0,0,0,.45); color:#fff; }
    .itsa-watermark img { height:18px; }
  </style>
</head>
<body>
  <header>
    <img src="/pictures/AcademyLogoTransparent.png" alt="ITSA" />
    <strong>IT Star Academy — <%= courseName || 'Classe en direct' %></strong>
    <a href="/courses/<%= encodeURIComponent(courseId) %>">← Retour au cours</a>
  </header>

  <div id="wrap">
    <div id="jitsi">
      <div id="jitsi-container" style="width:100%; height:100%;"></div>
      <div class="itsa-watermark">
        <img src="/pictures/AcademyLogoTransparent.png" alt="ITSA" />
        <span>IT Star Academy</span>
      </div>
    </div>
  </div>

  <script>
    const DOMAIN       = <%= JSON.stringify(domain) %>;
    const ROOM_NAME    = <%= JSON.stringify(roomName) %>;
    const ROOM_PASS    = <%= JSON.stringify(roomPassword) %>;
    const COURSE_NAME  = <%= JSON.stringify(courseName || '') %>;
    const IS_TEACHER   = <%= JSON.stringify(!!isTeacher) %>;
    const DISPLAY_NAME = <%= JSON.stringify((user && user.fullName) ? user.fullName : 'Participant ITSA') %>;

    let api = null;
    function mount() {
      const options = {
        roomName: ROOM_NAME,
        parentNode: document.getElementById('jitsi-container'),
        width: '100%', height: '100%',
        configOverwrite: {
          prejoinPageEnabled: false,
          startWithAudioMuted: true,
          startWithVideoMuted: true,
          disableDeepLinking: true,
          enableLobby: true
        },
        interfaceConfigOverwrite: {
          APP_NAME: 'IT Star Academy Live',
          MOBILE_APP_PROMO: false,
          VIDEO_QUALITY_LABEL_DISABLED: true,
        },
        userInfo: { displayName: DISPLAY_NAME }
      };
      api = new JitsiMeetExternalAPI(DOMAIN, options);
      api.executeCommand('subject', `IT Star Academy — ${COURSE_NAME}`);

      api.on('participantRoleChanged', (e) => {
        if (IS_TEACHER && e.role === 'moderator' && ROOM_PASS) api.executeCommand('password', ROOM_PASS);
      });
      api.on('passwordRequired', () => {
        if (ROOM_PASS) api.executeCommand('password', ROOM_PASS);
      });
    }
    mount();
    window.addEventListener('beforeunload', () => { if (api) api.dispose(); });
  </script>
</body>
</html>
