<form action="/admin/classes/<%= cls.id %>/courses" method="POST">
  <p>Ajouter des cours :</p>
  <ul>
    <% allCoursesWithoutClass.forEach(course => { %>
      <li>
        <label>
          <input
            type="checkbox"
            name="courses"
            value="<%= course.id %>"
          >
          <%= course.displayName || course.name %>
        </label>
      </li>
    <% }) %>
  </ul>

  <p>Cours déjà liés :</p>
  <ul>
    <% cls.Courses.forEach(course => { %>
      <li>
        <label>
          <input
            type="checkbox"
            name="courses"
            value="<%= course.id %>"
            checked
          >
          <%= course.displayName || course.name %>
        </label>
      </li>
    <% }) %>
  </ul>

  <button type="submit" class="btn-primary">Enregistrer</button>
</form>
