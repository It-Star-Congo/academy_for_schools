    :root {
  --primary: #0052cc;
  --primary-color: <%= theme.primaryColor %>;
  --secondary: #edf2ff;
  --accent: #ff7f50;
  --text-dark: #1a1a1a;
  --text-light: #ffffff;
  --text: #382b2b;
  --radius: 8px;
  --transition: 0.3s ease;

  --card-bg: #ffffff;
  --muted: #6b7280;
  --ring: rgba(13, 110, 253, .35);
}

.admin-dashboard {
  max-width: 1200px;
  margin: 40px auto;
  padding: 0 20px;
  font-family: 'Segoe UI', Roboto, sans-serif;
  color: var(--text-dark);
  text-decoration: dashed;
}

.admin-dashboard h1 {
  text-align: center;
  margin-bottom: 30px;
  font-size: 2.5rem;
