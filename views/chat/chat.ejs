<style>
  :root {
    --chat-bg: #ffffff;
    --chat-border-radius: 18px;
    --chat-shadow: 0 16px 40px rgba(15, 23, 42, 0.35);
    --chat-user-bubble: var(--primary-color);
    --chat-assistant-bubble: #f3f4f6;
  }

  /* Bouton flottant */
  #chat-toggle {
    position: fixed;
    left: 1rem;            /* bouton coll√© √† gauche */
    top: 50%;              /* centr√© verticalement */
    width: 56px;
    height: 56px;
    transform: translateY(-50%);
    border-radius: 999px;
    background: var(--primary-color);
    box-shadow: 0 12px 30px rgba(15, 23, 42, 0.35);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 1100;
    transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
  }

  #chat-toggle:hover {
    transform: translateY(-2px);
    background: var(--secondary-color);
    box-shadow: 0 16px 40px rgba(15, 23, 42, 0.45);
  }

  #chat-toggle svg {
    width: 26px;
    height: 26px;
    fill: #fff;
  }

  /* Fen√™tre de chat */
  #chat-widget {
    position: fixed;
    left: 1rem;
    top: 45%;
    transform: translateY(-30%) translateX(-100%);
    width: 360px;
    max-height: 520px;
    background: var(--chat-bg);
    border-radius: var(--chat-border-radius);
    box-shadow: var(--chat-shadow);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    font-family: var(--font-family), system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    opacity: 0;
    visibility: hidden;
    /*transform: translateY(10px) scale(0.97);*/
    transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s;
    z-index: 1100;
  }

  #chat-widget.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  /* Header */
  #chat-header {
    position: relative;
    padding: 0.75rem 0.9rem 0.75rem 0.9rem;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: #fff;
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }

  #chat-header-avatar {
    width: 34px;
    height: 34px;
    border-radius: 999px;
    background: rgba(15, 23, 42, 0.28);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.9rem;
  }

  #chat-header-info {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-width: 0;
  }

  #chat-header-title {
    font-size: 0.9rem;
    font-weight: 700;
    line-height: 1.1;
  }

  #chat-header-status {
    font-size: 0.75rem;
    opacity: 0.9;
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }

  #chat-header-status-dot {
    width: 7px;
    height: 7px;
    border-radius: 999px;
    background: #22c55e;
    box-shadow: 0 0 0 4px rgba(34, 197, 94, 0.25);
  }

  #chat-close {
    background: transparent;
    border: none;
    cursor: pointer;
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.85);
    padding: 0;
  }

  #chat-close:hover {
    color: #fff;
  }

  /* Zone messages */
  #chat-messages {
    flex: 1;
    padding: 0.75rem 0.85rem 0.4rem;
    overflow-y: auto;
    background: #f9fafb;
  }

  #chat-messages::-webkit-scrollbar {
    width: 7px;
  }
  #chat-messages::-webkit-scrollbar-track {
    background: transparent;
  }
  #chat-messages::-webkit-scrollbar-thumb {
    background: rgba(148, 163, 184, 0.7);
    border-radius: 999px;
  }

  .chat-msg {
    display: flex;
    margin-bottom: 0.4rem;
  }

  .chat-msg.assistant {
    justify-content: flex-start;
  }

  .chat-msg.user {
    justify-content: flex-end;
  }

  .chat-msg .bubble {
    max-width: 80%;
    padding: 0.5rem 0.7rem;
    border-radius: 14px;
    font-size: 0.85rem;
    line-height: 1.4;
    box-shadow: 0 4px 12px rgba(15, 23, 42, 0.06);
    word-wrap: break-word;
    white-space: pre-wrap;
  }

  .chat-msg.assistant .bubble {
    background: var(--chat-assistant-bubble);
    color: #111827;
    border-bottom-left-radius: 4px;
  }

  .chat-msg.user .bubble {
    background: var(--chat-user-bubble);
    color: #fff;
    border-bottom-right-radius: 4px;
  }

  .chat-meta {
    font-size: 0.7rem;
    color: #9ca3af;
    margin-top: 0.1rem;
  }

  .chat-msg.assistant .chat-meta {
    margin-left: 0.25rem;
  }
  .chat-msg.user .chat-meta {
    text-align: right;
    margin-right: 0.25rem;
  }

  /* Suggestions rapides */
  #chat-quick {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
    padding: 0 0.85rem 0.3rem;
  }

  .chat-chip {
    border-radius: 999px;
    padding: 0.25rem 0.6rem;
    background: #e5e7eb;
    font-size: 0.75rem;
    color: #4b5563;
    border: none;
    cursor: pointer;
    transition: background 0.15s ease, transform 0.1s ease;
  }

  .chat-chip:hover {
    background: #d4d4d8;
    transform: translateY(-1px);
  }

  /* Pied : champ de saisie */
  #chat-input {
    border-top: 1px solid #e5e7eb;
    padding: 0.5rem 0.6rem;
    display: flex;
    align-items: center;
    gap: 0.45rem;
    background: #ffffff;
  }

  #chat-text {
    flex: 1;
    padding: 0.45rem 0.6rem;
    border: 1px solid #d1d5db;
    border-radius: 999px;
    font-size: 0.85rem;
    outline: none;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  #chat-text:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.25);
  }

  #chat-send {
    padding: 0.45rem 0.9rem;
    border: none;
    border-radius: 999px;
    background: var(--primary-color);
    color: #fff;
    font-size: 0.8rem;
    font-weight: 600;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    transition: background 0.2s ease, transform 0.1s ease, box-shadow 0.2s ease;
    box-shadow: 0 8px 18px rgba(37, 99, 235, 0.35);
  }

  #chat-send:hover {
    background: var(--secondary-color);
    transform: translateY(-1px);
    box-shadow: 0 10px 25px rgba(30, 64, 175, 0.5);
  }

  #chat-send:disabled {
    opacity: 0.7;
    cursor: default;
    box-shadow: none;
    transform: none;
  }

  /* Typing indicator */
  .chat-msg.typing .bubble {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .typing-dot {
    width: 6px;
    height: 6px;
    border-radius: 999px;
    background: #9ca3af;
    animation: typing-bounce 1s infinite;
  }
  .typing-dot:nth-child(2) { animation-delay: 0.15s; }
  .typing-dot:nth-child(3) { animation-delay: 0.3s; }

  @keyframes typing-bounce {
    0%, 80%, 100% { transform: translateY(0); opacity: 0.5; }
    40% { transform: translateY(-3px); opacity: 1; }
  }

  /* Responsive */
  @media (max-width: 600px) {
    #chat-widget {
      right: 0.75rem;
      left: 0.75rem;
      width: auto;
      bottom: 1rem;
    }

    #chat-toggle {
      right: 1rem;
      bottom: 1rem;
    }
  }
</style>

