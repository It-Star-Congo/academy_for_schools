        }

        .abonnement-done {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #5bc720;
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: none;
        }

        .abonnement-container form{
            min-height: 50vh;
            margin: 0;
            font-family: sans-serif;
            display: flex;
            justify-content: center;
            flex-direction: row;
            flex-wrap: nowrap;        /* <-- Empêche le retour à la ligne */
            gap: 20px;                /* Espace entre les cartes */
            justify-content: center;  /* Centre horizontalement */
            align-items: flex-start;  
        }

        .abonnement-card {
            border: 1px solid #f8bc1a;
            border-radius: 8px;
            padding: 20px;
            width: 300px;
            text-align: center;
            background-color: white;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            display: flex; /* Ajout de cette ligne */
            flex-direction: column; /* Ajout de cette ligne */
        }

        .abonnement-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 1px solid #5bc720;

        }
        .abonnement-card:hover .highlighted{
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 1px solid #5bc720;
            color: #5bc720;

        }

        .abonnement-card li.highlighted::before{
            content: "✔";
            color: #95f461;
            margin-right: 0.5rem;
            font-weight: bold;
        }

        .abonnement-card h3 {
            color: #f8bc1a;
            margin-bottom: 10px;
        }

        .abonnement-card p {
            color: #666;
            margin-bottom: 20px;
        }

        .abonnement-card ul {
            list-style: none;
            padding: 0;
            margin-bottom: 20px;
            flex-grow: 1; /* Ajout de cette ligne */
        }

        .abonnement-card li {
            margin-bottom: 8px;
        }

        .abonnement-card button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }


        .abonnement-card.selected h3 {
            color: #5bc720;;
        }

        .abonnement-card:hover h3 {
            color: #5bc720;
        }

        .abonnement-card.selected {
            border: 3px solid #5bc720;;
        }

        .abonnement-card button:hover {
            background-color: #0056b3;
        }
        .abonnement-card li.highlighted {
            /*border: 1px solid #f8bc1a;*/
            padding: 5px;
            border-radius: 3px;
        }
        .price span {
            font-size: 2rem;
            font-weight: bold;
            padding: 5px;
            min-width: 20px;
            display: flex; /* Ajout de cette ligne */
            flex-direction: column; /* Ajout de cette ligne */
            border-radius: 5%;
            margin: 1rem 0;
            
            color: #5bc720;;
        }
    </style>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const cards = document.querySelectorAll('.abonnement-card');
        const hiddenInput = document.getElementById('abonnement-hidden');

        cards.forEach(card => {
        card.addEventListener('click', () => {
            // Retire la sélection précédente
            cards.forEach(c => c.classList.remove('selected'));

            // Marque la carte actuelle
            card.classList.add('selected');

            // Met à jour la valeur cachée
            hiddenInput.value = card.dataset.abonnement;
        });
      });

      // Valeur par défaut (première carte visible)
      if (cards.length > 0) {
        cards[0].classList.add('selected');
        hiddenInput.value = cards[0].dataset.abonnement;
      }
    });
    </script>
</body>